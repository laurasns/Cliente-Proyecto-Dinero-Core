@using ProyectoCoreLauraSanNicolas.Models.ViewModels

@{
    ViewBag.Title = "SignUp";

    UserVMO userData = (ViewData["userData"] as UserVMO) ?? new UserVMO();
}
@section scripts{
    <script>
        $("#showPassword").click(function () {
            $("#showPassword").css('display', 'none');
            $("#hidePassword").css('display', 'inline-block');
            $("#pass").prop('type', 'text');
        });

        $("#hidePassword").click(function () {
            $("#hidePassword").css('display', 'none');
            $("#showPassword").css('display', 'inline-block');
            $("#pass").prop('type', 'password');
        });
    </script>

}

<br />
<h2 class="title">Registro</h2>
<br />
<br />
<div class="regDivContainer">
    <div class="regDiv">
        <div class="div divContent">
            <form method="post" class="form-group divContent">
                <div class="inputDiv">
                    <label class="logLabel">Usuario</label>
                    <div><input type="text" class="form-group inputLog" required name="Username" placeholder="Introduce un nombre de usuario" value="@userData.Username" /></div>
                </div>
                <div class="inputDiv">
                    <label class="logLabel">Email</label>
                    <div><input type="email" class="form-group inputLog" required name="Email" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,4}$" title="Introduce un formato de email correcto. Ejemplo: 'test@@test.com'" placeholder="Introduce un email válido" value="@userData.Email" /></div>
                </div>
                <div class="inputDiv">
                    <label class="logLabel">Nombre</label>
                    <div>
                        <input type="text" class="form-group inputLog" required name="Name" placeholder="Introduce tu nombre" value="@userData.Name" />
                    </div>
                </div>
                <div class="inputDiv">
                    <label class="logLabel">Apellidos</label>
                    <div>
                        <input type="text" class="form-group inputLog" required name="Surname" placeholder="Introduce tus apellidos" value="@userData.Surname" />
                    </div>
                </div>
                <div class="inputDiv">
                    <label class="logLabel unmaskLabel">Contraseña</label>
                    <div class="togglePassword" id="showPassword">
                        <img class="imgShowPass" alt="Mostrar / Ocultar" src="data:image/png;base64,">
                        <span class="spanPass">Mostrar</span>
                    </div>
                    <div class="togglePassword" id="hidePassword" style="display:none">
                        <img class="imgShowPass" alt="Mostrar / Ocultar" src="data:image/png;base64,">
                        <span class="spanPass">Ocultar</span>
                    </div>
                    <div>
                        <input type="password" id="pass" class="form-group inputLog" required name="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[0-9])(?=.*[A-Z]).{8,}" title="La contraseña debe contener como mínimo 8 caracteres, incluyendo una letra minúscula, una letra mayúscula y un número" placeholder="Introduce una contraseña válida" />
                    </div>
                </div>
                <br />
                <h4 style="color:red; text-align:center">@ViewBag.Error</h4>
                <div class="buttonDiv">
                    <button type="submit" id="sub" class="btn button btnLog">Registrarme</button>
                    <p class="comeBack center">O... &nbsp;@Html.ActionLink("Volver al Acceso", "SignIn")</p>
                </div>
            </form>
        </div>
    </div>
</div>



